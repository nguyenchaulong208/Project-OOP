@page
@using Entities
@model ProjectOOP.Pages.MH_TongHopModel
@{
    int stt = 1;
}
<form method="post">
    <label for="tukhoa">Từ Khóa:</label><br />
    <input type="text" name="txtSearch" value="" />
    <input type="submit" name="btnSearch" value="Tìm Kiếm" />
</form>
<div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Số thứ tự</th>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Hạn sử dụng</th>
                <th>Công ty sản xuất</th>
                <th>Năm sản xuất</th>
                <th>Loại hàng</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (SanPham sp in Model.DanhSachTongHop)
            {
                <tr>
                    <td>@stt</td>
                    <td>@sp.maSP</td>
                    <td>@sp.tenSP</td>
                    <td>@sp.soLuong</td>
                    <td>@sp.hanSuDung</td>
                    <td>@sp.congTySanXuat</td>
                    <td>@sp.namSanXuat</td>
                    <td>@sp.loaiHang</td>

                </tr>
                stt++;
            }
        </tbody>
    </table>
</div>